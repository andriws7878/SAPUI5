<mvc:View controllerName="andriws.SAPUI5.controller.HelloPanel"
          xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" displayBlock="true">
    <Panel headerText="{i18n>helloPanel}" class="sapUiResponsiveMargin" width="auto" 
           expandable="{device>/system/phone}" expanded="{= !${device>/system/phone} }"
           accessibleRole="Region">
        <content>
            <Button id="helloDialogButton" 
                    icon="sap-icon://action" 
                    press=".onOpenDialog" 
                    class="sapUiSmallMarginEnd sapUiVisibleOnlyOnDesktop"/>
            <Button text="{i18n>showelloButtonText}" press=".onShowHello" class="sapUiSmallMarginEnd sapUiHideOnDesktop"/>
            <Input value="{/recipient/name}" valueLiveUpdate="true" width="60%"></Input>
            <Text text="Hello {/recipient/name}" class="sapUiSmallMargin boldElements sapthemeHighlight-asColor"></Text>
        </content>
    </Panel>
    <core:Fragment fragmentName="andriws.SAPUI5.view.Form01" type="XML"/>
</mvc:View>