<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form">
    <Panel headerText="{i18n>panelFrTitle}" class="sapUiResponsiveMargin" width="50%"
           expandable="{device>/system/phone}" expanded="{= !${device>/system/phone} }">
        <form:SimpleForm id="form" editable="true">
            <form:content>
                <Label text="{i18n>labelPerson}" labelFor="persName"/>
                <Input id="persName" width="40%"/>
            </form:content>
        </form:SimpleForm>
    </Panel>
</core:FragmentDefinition>